{
  "name": "bouncer",
  "description": "Reverse proxy implementation in node-js.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/bouncer"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf --glob 'dist' 'reports' 'coverage' '*.tgz' '*.log' 'packages/**/dist' 'packages/**/*.tgz' 'packages/**/*.log' 'packages/**/.certificates'",
    "test": "vitest --run --coverage",
    "lint": "lint-janitor",
    "check": "tsc --noEmit",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn check && yarn test && yarn build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.0",
    "@vitest/coverage-istanbul": "^2.1.5",
    "@zthun/lint-janitor": "^18.0.4",
    "@zthun/lint-janitor-config": "^18.0.4",
    "husky": "^9.1.6",
    "lerna": "^8.1.9",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.5"
  },
  "resolutions": {
    "rollup": "npm:@rollup/wasm-node@*"
  },
  "packageManager": "yarn@4.5.1"
}
